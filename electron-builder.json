{
	"appId": "com.kami-guru.pathOfLevelling2",
	"productName": "Path Of Levelling 2",
	"files": ["dist-electron", "dist-react"],
	"extraResources": [
		"dist-electron/ipc/preload.cjs",
		"src/main/profiles/poe1/builds/**",
		"src/main/profiles/poe2/builds/**",
		"src/main/profiles/poe1/defaultSettings.json",
		"src/main/profiles/poe2/defaultSettings.json",
		"src/renderer/assets/**"
	],
	"asarUnpack": ["**/*.node"],
	"win": {
		"target": ["nsis", "portable"],
		"icon": "assets/icon.ico"
	},
	"linux": {
		"target": ["AppImage"],
		"icon": "assets/icon-big.png"
	}
}